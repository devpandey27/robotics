public class ProgrammingAssignment1 {
    // holy incantation
    public static void main(String args[]) {
        // Section 1
        int integer = 42;
        double decimal = 42.42;
        String string = "forty-two";
        boolean forty_two = true;
        System.out.println(integer);
        System.out.println(decimal);
        System.out.println(string);
        System.out.println(forty_two);

        //Section 2
        int other_integer = 42;
        int sum = integer + other_integer;
        int difference = integer - other_integer;
        int product = integer * other_integer;
        int quotient = integer / other_integer;
        int what_is_the_result_of_a_mod_operation_called_again = integer % other_integer;
        System.out.println(sum);
        System.out.println(difference);
        System.out.println(product);
        System.out.println(quotient);
        System.out.println(what_is_the_result_of_a_mod_operation_called_again);

        //Section 3
        int age = 42;
        if (age > 18){
            System.out.println("over 18");
        } else if (age > 13) {
            System.out.println("between 13 and 18");
        } else if (age > 0) {
            System.out.println("born");
        } else {
            System.out.println("this person MIGHT be lying about their age");
        }
        
        //Section 4
        for (int i = 1; i < 11; i++) {
            System.out.println(i);
        }
        int iteration = 1;
        while (iteration < 11) {
            System.out.println(iteration);
            iteration++;
        }
    }    
}
